<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/id_index_gallery_item_image2"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/lottery_info_nav_01"/>

    <TextView
        android:id="@+id/id_index_gallery_item_text2"
        style="@style/text_size_15_text_color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_index_gallery_item_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="双色球社区"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/lottery_city_info4"
        android:id="@+id/id_index_gallery_item_btn2"
        android:layout_gravity="center_horizontal"
        style="@style/text_size_12_text_white"
        android:background="@drawable/rect_radius_14_2"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="visible"/>

</LinearLayout>