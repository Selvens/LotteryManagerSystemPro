<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    >

    <ImageView
        style="@style/text_size_14_text_color_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_fragment_nav_1"
        android:id="@+id/home_icon_big_imgv1"
        />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:src="@mipmap/home_fragment_nav_4"
        style="@style/text_size_14_text_color_8"
        android:id="@+id/home_icon_big_imgv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/me_item_str_2"
        android:id="@+id/home_icon_big_tv"
        style="@style/text_size_9_text_color_16"
        android:layout_below="@+id/home_icon_big_imgv2"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-3dp"
        />

</RelativeLayout>