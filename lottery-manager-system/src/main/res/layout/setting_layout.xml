<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/topview_arrows_tv"
        android:id="@+id/setting_topview"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_color_7"
                android:clickable="true"
                android:id="@+id/setting_view_0">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView38"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/setting_nav_02"
                    android:layout_marginLeft="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_info_0"
                    android:id="@+id/textView29"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    style="@style/text_size_15_text_color_3"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView39"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/message_nav_return2"
                    android:layout_marginRight="13dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"
                android:id="@+id/imageView23"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_color_7"
                android:clickable="true"
                android:id="@+id/setting_view_1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView40"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/setting_nav_01"
                    android:layout_marginLeft="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_info_1"
                    android:id="@+id/textView30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    style="@style/text_size_15_text_color_3"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView41"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/message_nav_return2"
                    android:layout_marginRight="13dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"
                android:id="@+id/imageView42"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_color_7"
                android:clickable="true"
                android:id="@+id/setting_view_2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView43"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/setting_nav_03"
                    android:layout_marginLeft="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_info_2"
                    android:id="@+id/textView31"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    style="@style/text_size_15_text_color_3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18701265806"
                    android:id="@+id/textView32"
                    android:layout_gravity="center_vertical"
                    style="@style/text_size_14_view_line_2"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/message_nav_return2"
                    android:layout_marginRight="13dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"
                android:id="@+id/imageView45"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_color_7"
                android:clickable="true"
                android:id="@+id/setting_view_3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView46"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/setting_nav_04"
                    android:layout_marginLeft="13dp"/>

                <TextView
                    style="@style/text_size_15_text_color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_info_7"
                    android:id="@+id/textView33"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView47"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/message_nav_return2"
                    android:layout_marginRight="13dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"
                android:id="@+id/imageView48"/>
        </LinearLayout>

        <TextView
            style="@style/text_size_15_text_color_0"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="退出登录"
            android:id="@+id/settting_exit_btn"
            android:background="@drawable/rect_radius_9"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="30dp"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>