<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/topview_arrows_tv"
        android:id="@+id/area_detail_topview"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/bg_color_13">

                <com.manager.widgets.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/area_detail_icon_imgv"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_icon"
                    app:border_width="1dp"
                    app:border_color="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_size_14_text_color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manager_str_15"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            style="@style/text_size_15_text_color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon_str"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="忽忽"
                            android:id="@+id/area_detail_realname_tv"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            style="@style/text_size_14_text_color_3"
                            android:layout_marginLeft="5dp"
                            android:singleLine="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/username1"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            style="@style/text_size_14_text_color_4"/>

                        <TextView
                            style="@style/text_size_15_text_color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon_str"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456"
                            android:id="@+id/area_detail_name_tv"
                            android:layout_marginLeft="5dp"
                            style="@style/text_size_14_text_color_4"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@color/bg_color_13">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_info_15"
                    android:layout_gravity="center_vertical"
                    style="@style/text_size_15_text_color_3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/area_detail_address_tv"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    style="@style/text_size_15_text_color_3"
                    android:singleLine="true"
                    android:text="@string/debug_str_15"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    style="@style/text_size_15_text_color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manager_str_16"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    style="@style/text_size_15_text_color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/area_detail_phone_tv"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:text="@string/debug_str_19"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    style="@style/text_size_15_text_color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entrust_str_10"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    style="@style/text_size_15_text_color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/money_str"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    style="@style/text_size_15_text_color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/area_detail_money_tv"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/debug_str_20"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/line_single_1"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>