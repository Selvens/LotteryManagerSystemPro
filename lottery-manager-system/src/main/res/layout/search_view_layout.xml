<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_color_13"
              android:id="@+id/search_view_rootview">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/line_single_0"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_radius_18"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/search_img1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/search_layout_editText"
                android:layout_weight="1"
                android:hint="@string/contacts_info_hint"
                style="@style/text_size_12_text_color_4"
                android:textColorHint="@color/text_color_4"
                android:paddingLeft="5dp"
                android:ems="20"
                android:imeOptions="actionSearch"
                android:focusable="true"
                android:inputType="text"
                android:background="@null"
                android:layout_centerVertical="true"
                android:singleLine="true"/>

        </LinearLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/wallet_str_9"
            android:clickable="true"
            android:id="@+id/search_view_btn"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="-10dp"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/line_single_0"
        android:layout_marginTop="10dp"/>

</LinearLayout>