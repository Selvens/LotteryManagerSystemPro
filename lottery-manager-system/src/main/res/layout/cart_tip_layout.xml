<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bg_color_8"
                android:layout_marginTop="13dp">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_tip_view1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cart_tip_btn1"
                        android:src="@mipmap/cart_nav_06"
                        android:clickable="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"/>

                    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="top|right"
                                 android:id="@+id/cart_tip_num_viewgroup"
                                 android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@drawable/oval_shape_2"/>

                        <TextView
                            style="@style/text_size_11_text_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99"
                            android:id="@+id/cart_tip_num_tv"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_hint_str1"
                    android:id="@+id/cart_tip_info_tv"
                    android:layout_alignParentRight="false"
                    android:layout_toRightOf="@+id/cart_tip_view1"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@+id/cart_tip_view1"
                    style="@style/text_size_14_text_white"/>
            </RelativeLayout>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/site_declare_btn1"
            android:id="@+id/cart_tip_btn2"
            android:background="@drawable/rect_radius_14_2"
            style="@style/text_size_14_text_white"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:layout_marginTop="13dp"
            android:layout_weight="0.3"/>
    </LinearLayout>
</LinearLayout>