<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_radius_23"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/pay_password_view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cricle_shape"
            android:id="@+id/pay_password_view_img_0"
            android:scaleType="center"
            android:visibility="invisible"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_line_7"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@drawable/cricle_shape"
            android:id="@+id/pay_password_view_img_1"
            android:scaleType="center"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_line_7"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cricle_shape"
            android:visibility="invisible"
            android:id="@+id/pay_password_view_img_2"
            android:scaleType="center"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_line_7"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cricle_shape"
            android:visibility="invisible"
            android:id="@+id/pay_password_view_img_3"
            android:scaleType="center"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_line_7"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@drawable/cricle_shape"
            android:id="@+id/pay_password_view_img_4"
            android:scaleType="center"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_line_7"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cricle_shape"
            android:visibility="invisible"
            android:id="@+id/pay_password_view_img_5"
            android:scaleType="center"/>

    </LinearLayout>

    <EditText
        android:id="@+id/sdk2_pwd_edit_simple"
        android:background="@null"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColor="@color/bg_color_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>