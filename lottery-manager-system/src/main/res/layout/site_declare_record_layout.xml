<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color_4">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/topview_arrows_tv"
        android:id="@+id/site_declare_record_topview"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.manager.view.TabCommonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/site_declare_record_tabview"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/site_declare_record_tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:fillViewport="false"
            android:overScrollMode="never"/>

    </LinearLayout>

</LinearLayout>